                    name="id" 
                    class="variant-option"
                    value="{{ variant.id }}" 
                    id="variant-option-{{ variant.id }}" 
                    {% unless variant.available %} disabled{% endunless %}
                    {% if product.selected_variant.id == variant.id %} checked{% endif %}
                  >
                  <label for="variant-option-{{ variant.id }}" class="{% unless variant.available %} disabled{% endunless %}">{{ variant.title | split: '/ ' | first }}</label>
