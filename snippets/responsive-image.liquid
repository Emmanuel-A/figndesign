{% unless image_widths %}
  {% assign image_widths = "500x" %}
{% endunless %}

<img id="Image-{{ image.id }}-{{ responsive_image_counter }}"
  class="responsive-image__image {{ image_class }}"
  src="{{ image | img_url : image_widths }}"
  data-src="{{image  | img_url : "1440x"}}"
  data-aspectratio="{{ image.aspect_ratio }}"
  data-sizes="auto"
  tabindex="-1"
  alt="{{ image.alt | escape }}"
  {{ image_attributes }}
>